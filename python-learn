while(1):
    year  = int(input("연도"))
    if(year%4 == 0 and year%100 != 0 or year%400 == 0):
        print("1")
    else :
        print("0")
------------------------------------------------------------------------------
score  = int(input("점수"))
if(100>=score and 90<=score):
    print("A")
if(89>=score and 80<=score):
    print("B")
if(79>=score and 70<=score):
    print("C")
else :
    print("F")
