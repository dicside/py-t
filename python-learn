def cost(a):
    money = int(input("지불하실 돈"))
    print("거스름돈", money-a)
purchase = int(input("먹을 음식의 번호를 선택해주세요 1~4"))
if(purchase == 1):print("3000원");cost(3000)
elif(purchase == 2 or purchase == 3 or purchase == 4):print("3500원");cost(3500)
